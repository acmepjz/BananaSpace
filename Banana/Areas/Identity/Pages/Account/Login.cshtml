@page
@model LoginModel

@{
    ViewData["Title"] = "登录";
}

<div class="box center-block not-wide large-padding large-margin-top">
    <h1 class="text-center box-h1">@ViewData["Title"]</h1>

    <section>
        <form method="post">
            <h4>使用 Banana Space 账号登录。</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.UserName"></label>
                <input asp-for="Input.UserName" class="form-control" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn button-yellow button-large-mobile">登录</button>
            </div>
            <div class="form-group">
                @*<p>
                    <a asp-page="./ForgotPassword">忘记密码？</a>
                </p>*@
                <p>
                    <a href="~/register">注册新用户</a>
                </p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
