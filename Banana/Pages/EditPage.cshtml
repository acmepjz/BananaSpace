@page
@model Banana.Pages.EditPageModel

<div>
    @if (Model.UserPage != null)
    {
        <div class="sidebar">
            <div class="sidebar-container">
                <p>
                    This is a sidebar.
                </p>
            </div>
        </div>

        <div class="box page-body med-padding">
            <h1 class="box-h1">
                编辑: @Html.Raw(Model.UserPage.HtmlTitle)
            </h1>

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Title"></label>
                    <input asp-for="Input.Title" class="form-control textbox-code" autocomplete="off" />
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Content"></label>
                    <textarea asp-for="Input.Content" class="form-control textbox-code textarea-content" placeholder="@Model.ContentUIHint" spellcheck="false"></textarea>
                    <span asp-validation-for="Input.Content" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="保存并预览" class="btn button-yellow leave-no-confirm" asp-route-id="@Model.UserPage.Id" />
                    <div class="one-em-wide"></div>
                    <input type="submit" value="发布" class="btn button-yellow leave-no-confirm" asp-route-id="@Model.UserPage.Id" asp-route-publish="true" />
                    <div class="one-em-wide"></div>
                    <a class="btn button-yellow" href="@(Model.UserPage.IsPublic ? "/page/" + Model.UserPage.Id : "/manage/" + Model.UserPage.CourseId)">返回</a>
                </div>
            </form>

        </div>

        var _page = Model.DraftPage ?? Model.UserPage;
        <div class="box page-body med-padding">
            <h1>
                @Html.Raw(_page.HtmlTitle)
            </h1>
            <hr />

            <div class="user-page-content">
                @Html.Raw(_page.HtmlContent)
            </div>
        </div>
    }
    else
    {
        <partial name="_PageDoesNotExistPartial" />
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
