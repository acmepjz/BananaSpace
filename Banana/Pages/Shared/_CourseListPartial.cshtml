@model Banana.Pages.Shared._CourseListPartialModel

<div>
    @if (Model.Courses != null)
    {
        foreach (var course in Model.Courses)
        {
            <a class="link-no-underline noselect"
               @(Model.Type == CourseListType.View 
                ? (course.Status == Data.CourseStatus.Normal ? $"href=page/{course.MainPageId}" : "")
                : $"href=NewCourse?requestId={course.Id}")>
                <div class="list-item">
                    <div class="list-item-header">
                        @course.Title
                        <span class="list-item-header-description">
                            @(course.Status == Data.CourseStatus.Request ? "申请中" : course.Type)
                        </span>
                    </div>
                    <div class="list-item-description">
                        创建者：@course.Creator
                    </div>
                </div>
            </a>
        }
    }
</div>
